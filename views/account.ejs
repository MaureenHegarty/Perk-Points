<% if (messages.info) { %>
<style>
  .logout-button {
    margin-top: 20px;
    font-size: 30px;
  }
</style>

<button class="logout-button">logout</button>

<div class="alert alert-info"><%= messages.info %></div>
<% } %>

<h2><center>My Perk Points Account</center></h2>
<br />
<style>
  .user-form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .user-form div {
    text-align: left;
    width: fit-content;
  }
</style>

<form action="/account/<%= user.id %>" method="post" class="user-form">
  <div>
    <label for="qr"
      ><h4><center>My Unique QR Code</center></h4></label
    ><br />
    <center><img src="/qr/<%= user.id %>" alt="User QR Code" /></center>
  </div>
  <br />
  <input type="hidden" name="_method" value="put" />
  <div>
    <label for="points">My Perk Points Tally</label><br /><br />

    <input
      name="points"
      type="text"
      value="<%= user.points %> Perk Points"
      readonly
    />
  </div>
  <h4>Claim your FREE coffee with 50 Perk Points</h4>
  <div>
    <label for="email">Email</label>
    <input name="email" type="text" value="<%= user.email %>" />
  </div>
  <div>
    <label for="first_name">First Name</label>
    <input name="first_name" type="text" value="<%= user.first_name %>" />
  </div>
  <div>
    <label for="last_name">Last Name</label>
    <input name="last_name" type="text" value="<%= user.last_name %>" />
  </div>
  <div>
    <label for="address">Address</label>
    <input name="address" type="text" value="<%= user.address %>" />
  </div>
  <div>
    <label for="phone">Phone Number</label>
    <input name="phone" type="text" value="<%= user.phone %>" />
  </div>
  <div>
    <label for="dob">Date of Birth</label>
    <input
      name="dob"
      type="date"
      value="<%= user.dob ? user.dob.toISOString().split('T')[0] : '' %>"
      readonly
    />
  </div>

  <div>
    <label for="bio">Bio</label>
    <textarea name="bio"><%= user.bio %></textarea>
  </div>

  <!-- <div>
    <label for="profile_picture">Profile Picture URL</label>
    <input name="profile_picture" type="text" value="<%= user.profile_picture %>">
  </div>
  -->

  <button>Update</button>
</form>
<% if (messages.info) { %>
<div class="alert alert-info"><%= messages.info %></div>
<% } %>

<!-- Rest of your HTML -->

<div class="bottom-space"></div>
